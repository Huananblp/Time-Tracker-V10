    <script>
        // Function to detect device type
        function detectDevice() {
            const userAgent = navigator.userAgent.toLowerCase();
            const isMobile = /android|iphone|ipad|ipod/i.test(userAgent);
            return isMobile;
        }

        // getLocation
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {
            var lat = position.coords.latitude;
            var lon = position.coords.longitude;
            console.log(lat, lon);
            window.open('https://liff.line.me/2006445603-aO8PqngE?lat=' + lat + '&lon=' + lon, '_self');
        }

        // Check if the device is mobile or not
        if (detectDevice()) {
            // If mobile, proceed to get location
            getLocation();
        } else {
            // If PC, show warning message
            document.getElementById('warning-message').style.display = 'flex'; // ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÅ‡∏•‡∏∞‡∏≠‡∏¥‡πÇ‡∏°‡∏à‡∏¥
        }
    </script>

